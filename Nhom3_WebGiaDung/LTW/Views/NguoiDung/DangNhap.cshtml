@model LTW.Models.KhachHang

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Error"] != null)
{
<script type="text/javascript">
        alert("@TempData["Error"]");
</script>
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Đăng Nhập</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <span class = "control-label col-md-2">Tên Đăng Nhập</span>
        <div class="col-md-4">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class = "control-label col-md-2">Mật Khẩu</span>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đăng Nhập" class="btn btn-success" />
        </div>
    </div>
</div>
}


<p class="text-body-secondary" style="margin: 0  0 0 2px">
    Đi Tới @Html.ActionLink("Đăng Ký", "DangKy", "NguoiDung", new {@class = "text-reset"})
</p>


