@model IEnumerable<LTW.Models.NCC>

@{
    ViewBag.Title = "ListNhaCungCap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Danh Sách Nhà Cung Cấp </h2>


<table class="table">
    <tr>
        <th>
            Tên Nhà Cung Cấp
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNCC)
        </td>
        
        <td>
           
            @Html.ActionLink("Chi Tiết Nhà Cung Cấp", "Detail", new { id=item.MaNCC }) 
           
        </td>
    </tr>
}

</table>

