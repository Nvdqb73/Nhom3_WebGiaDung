@model IEnumerable<LTW.Models.NCC>

@{
    ViewBag.Title = "ListNhaCungCap";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Nhà Cung Cấp</h2>

<p style="width: 300px;">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diachi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNCC }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaNCC }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNCC })
            </td>
        </tr>
    }

</table>
